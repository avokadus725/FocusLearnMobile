<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Application Theme -->
    <style name="Theme.FocusLearn" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_400</item>
        <item name="colorPrimaryVariant">@color/primary_600</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_400</item>
        <item name="colorSecondaryVariant">@color/secondary_500</item>
        <item name="colorOnSecondary">@color/gray_800</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/primary_50</item>
        <item name="colorOnBackground">@color/gray_800</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray_800</item>

        <!-- Error colors -->
        <item name="colorError">@color/danger_500</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_600</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Action bar -->
        <item name="colorPrimaryDark">@color/primary_600</item>
    </style>

    <!-- Activity Theme with No Action Bar -->
    <style name="Theme.FocusLearn.NoActionBar" parent="Theme.FocusLearn">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.FocusLearn.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.FocusLearn.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_400</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.FocusLearn.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_400</item>
        <item name="android:textColor">@color/primary_600</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.FocusLearn.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_600</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Text Input Layout -->
    <style name="Widget.FocusLearn.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_400</item>
        <item name="hintTextColor">@color/gray_500</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.FocusLearn.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primary_400</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>

    <!-- FAB -->
    <style name="Widget.FocusLearn.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary_400</item>
        <item name="tint">@color/white</item>
    </style>

